{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "object-curly-spacing": 0,
        "camelcase": 0,
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "react/react-in-jsx-scope": 0,
        // Indent with 4 spaces
        "indent": [
            "error",
            4
        ],
        // Indent JSX with 4 spaces
        "react/jsx-indent": [
            "error",
            4
        ],
        // Indent props with 4 spaces
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/prop-types": 0
    }
}